      <bioghist id="aspace_e6f6d8dfb4fb092541d5b74fb640522c">
         <head>Biographical / Historical</head>
         <chronlist>
            <chronitem>
               <date>1841</date>
               
                  <event>Born in South Hadley, MA</event>
               
            </chronitem>
            <chronitem>
               <date>1860</date>
               
                  <event>Graduated from New York Free Academy</event>
               
            </chronitem>
            <chronitem>
               <date>1864</date>
               
                  <event>M.D., Bellevue Medical College</event>
               
            </chronitem>
            <chronitem>
               <date>1866</date>
               
                  <event>B.D., Andover Theological Seminary</event>
               
            </chronitem>
            <chronitem>
               <date>1866</date>
               
                  <event>Appointed as missionary to Turkey but unable to serve due to poor health</event>
               
            </chronitem>
            <chronitem>
               <date>1869-1888</date>
               
                  <event>Minister of Congregational Church, Fairfield, Iowa</event>
               
            </chronitem>
            <chronitem>
               <date>1870</date>
               
                  <event>Married Helen Kirby</event>
               
            </chronitem>
            <chronitem>
               <date>1904-1907</date>
               
                  <event>Recording Secretary of National Federation of Churches</event>
               
            </chronitem>
            <chronitem>
               <date>1906-1907</date>
               
                  <event>Trustee of the Congregational Church Building Committee</event>
               
            </chronitem>
            <chronitem>
               <date>1906</date>
               
                  <event>D.D., Parsons College</event>
               
            </chronitem>
            <chronitem>
               <date>1907</date>
               
                  <event>Died</event>
               
            </chronitem>
         </chronlist>
      </bioghist>
      <scopecontent id="aspace_eb10febddcb54e64536b61b27bc1019d">
         <head>Scope and Contents</head>
         <list>
            <item>
               <ref xlink:actuate="onRequest" xlink:show="replace" target="ref14">I. Biographical Information</ref>
            </item>
            <item>
               <ref xlink:actuate="onRequest" xlink:show="replace" target="ref17">II. Sermons</ref>
